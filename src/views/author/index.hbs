<main>
  <div class="row justify-content-center mb-4">
    <div class="col-11">
      <div class="card shadow-sm">
        <div class="card-header bg-info bg-opacity-75">
          <h3 class="text-white">
            Mantenimiento de Autores
            <a
              id="btn-autor-save"
              class="btn btn-success shadow-sm"
              href="/authors/create"
            >Crear</a>
          </h3>

        </div>
        {{#if hasAuthors}}
          <div class="card-body">
            <div class="row">

              {{#each authors as |author|}}
                <div class="col-3 mb-3">
                  <div class="card shadow-sm h-100">
                    <div class="card-body">

                      <h4>{{author.name}}</h4>
                      <div>
                        <div>
                          <label class="card-subtitle text-muted">Correo:</label>
                          <span class="">{{author.email}}</span>
                        </div>
                        <div>
                          <label class="card-subtitle text-muted">Libros:</label>
                          <span class="">{{author.count}}</span>
                        </div>
                      </div>
                      <div
                        class="mt-3 d-flex justify-content-between align-items-center"
                      >
                        <div class="btn-group">
                          <a
                            href="/authors/edit/{{author.id}}"
                            class="btn btn-sm btn-outline-warning"
                          >Editar</a>
                          <a
                            href="/authors/delete/{{author.id}}"
                            class="btn btn-sm btn-outline-danger"
                          >Borrar</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

              {{/each}}
            </div>
          </div>
        {{else}}
          <div class="container-fluid text-center m-5">
            <h4>No hay libros creados!</h4>
            <p>Empieza a crear uno.</p>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</main>